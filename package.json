{
  "name": "r3f-next-starter",
  "version": "0.1.0",
  "authors": [
    "Renaud ROHLINGER <hello@renaudrohlinger.com>"
  ],
  "private": true,
  "scripts": {
    "lint": "npm run prettier && npm run eslint && npm run stylelint",
    "stylelint": "stylelint 'src/**/*.scss' --syntax scss",
    "eslint": "eslint --fix 'src/**/*.{js,jsx}' --ext jsconfig.json",
    "prettier": "prettier --list-different '**/*.{js,jsx,md}'",
    "dev": "next dev",
    "build": "next build",
    "start": "cross-env NODE_ENV=production node build/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "if",
            "else",
            "mixin",
            "each",
            "include",
            "function",
            "return",
            "warn",
            "for"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "resolutions": {
    "webpack": "~4.43.0"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "nodemon": "^2.0.6",
    "stylelint": "^13.7.2"
  },
  "devDependencies": {
    "@babel/node": "^7.12.1",
    "@babel/plugin-transform-react-jsx-compat": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/runtime": "^7.12.1",
    "@react-spring/three": "^9.0.0-rc.3",
    "@react-three/drei": "^2.2.2",
    "@zeit/next-sass": "^1.0.1",
    "babel-eslint": "^10.1.0",
    "babel-node": "^0.0.1-security",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-styled-components": "^1.11.1",
    "babel-preset-react-app": "^9.1.2",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.14.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-standard": "^15.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^4.0.2",
    "global": "^4.4.0",
    "husky": "^4.3.0",
    "lerp": "^1.0.3",
    "lint-staged": "^10.5.0",
    "next": "^10.0.0",
    "next-compose-plugins": "^2.2.0",
    "next-fonts": "^1.4.0",
    "next-images": "^1.6.0",
    "next-react-svg": "^1.1.2",
    "next-transpile-modules": "4.0.2",
    "next-videos": "^1.4.0",
    "node-sass": "^4.14.1",
    "postprocessing": "^6.17.4",
    "prettier": "^2.1.2",
    "react": "^0.0.0-experimental-4ead6b530",
    "react-device-detect": "^1.14.0",
    "react-dom": "^0.0.0-experimental-4ead6b530",
    "react-postprocessing": "^1.4.0",
    "react-spring": "^8.0.27",
    "react-three-fiber": "5.1.3",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "three": "^0.121.1"
  },
  "license": "MIT"
}
